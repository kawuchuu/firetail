{
  "name": "firetail",
  "version": "0.4.0",
  "description": "Audio Player",
  "author": {
    "name": "projsh_",
    "email": "projshdev@gmail.com"
  },
  "repository": "https://github.com/projsh/firetail.git",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "release": "build"
  },
  "dependencies": {
    "discord-rpc": "^3.0.1",
    "electron-settings": "^3.2.0",
    "fs-extra": "^8.1.0",
    "jsmediatags": "^3.8.1",
    "markdown-it": "^9.0.0",
    "tmp": "^0.0.33"
  },
  "devDependencies": {
    "electron": "^4.2.2",
    "electron-builder": "^20.40.2"
  },
  "optionalDependencies": {
    "mpris-service": "^2.1.0"
  },
  "build": {
    "appId": "com.projsh.firetail",
    "productName": "Firetail",
    "copyright": "Copyright Â© 2019 projsh_",
    "mac": {
      "category": "public.app-category.music",
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "dmg": {
      "icon": "assets/icon.icns"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "assets/icon.ico",
      "publisherName": "projsh_"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": "x64"
        },
        {
          "target": "deb",
          "arch": "x64"
        }
      ],
      "category": "AudioVideo",
      "executableName": "firetail",
      "desktop": {
        "Type": "Application",
        "Name": "Firetail",
        "Comment": "Audio Player",
        "Icon": "firetail",
        "Terminal": "false"
      }
    },
    "publish": [
      {
        "provider": "github",
        "owner": "projsh",
        "releaseType": "draft"
      }
    ]
  }
}
