{
  "name": "firetail",
  "version": "0.5.1",
  "description": "Audio Player",
  "author": {
    "name": "projsh_",
    "email": "projshdev@gmail.com"
  },
  "repository": "https://github.com/projsh/firetail.git",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "release": "build"
  },
  "dependencies": {
    "discord-rpc": "^3.0.1",
    "electron-settings": "^3.2.0",
    "express": "^4.17.1",
    "fs-extra": "^8.1.0",
    "jsmediatags": "^3.8.1",
    "markdown-it": "^9.0.0",
    "node-id3": "^0.1.13",
    "vue": "^2.6.11",
    "vue-async-computed": "^3.8.2"
  },
  "devDependencies": {
    "electron": "^8.1.1",
    "electron-builder": "^21.2.0"
  },
  "optionalDependencies": {
    "mpris-service": "^2.1.0"
  },
  "build": {
    "appId": "com.projsh.firetail",
    "productName": "Firetail",
    "copyright": "Copyright Â© 2019 projsh_",
    "mac": {
      "category": "public.app-category.music",
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "dmg": {
      "icon": "assets/icon.icns"
    },
    "nsis": {
      "artifactName": "Firetail-Setup-${version}.${ext}",
      "uninstallDisplayName": "Firetail"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "assets/icon.ico",
      "publisherName": "projsh_"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": "x64"
        },
        {
          "target": "deb",
          "arch": "x64"
        }
      ],
      "category": "AudioVideo",
      "executableName": "firetail",
      "desktop": {
        "Type": "Application",
        "Name": "Firetail",
        "Comment": "Audio Player",
        "Icon": "firetail",
        "Terminal": "false"
      }
    }
  }
}
