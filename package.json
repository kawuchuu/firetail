{
  "name": "firetail",
  "version": "0.3.0",
  "description": "Audio Player",
  "author": {
    "name": "projsh_",
    "email": "projsh@users.noreply.github.com"
  },
  "repository": "https://github.com/projsh/firetail",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "build:mac": "electron-builder --mac"
  },
  "dependencies": {
    "chokidar": "^2.1.6",
    "discord-rpc": "^3.0.1",
    "electron-settings": "^3.2.0",
    "fs-extra": "^8.0.1",
    "jsmediatags": "^3.8.1",
    "tmp": "^0.1.0"
  },
  "devDependencies": {
    "electron": "^4.2.2",
    "electron-builder": "^20.40.2"
  },
  "optionalDependencies": {
    "mpris-service": "^2.1.0"
  },
  "build": {
    "appId": "com.projsh.firetail",
    "productName": "Firetail",
    "copyright": "Copyright Â© 2019 projsh_",
    "mac": {
      "category": "public.app-category.music",
      "target": "dmg",
      "icon": "assets/image/icon.icns"
    },
    "dmg": {
      "icon": "assets/image/icon.icns"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "assets/image/icon.ico",
      "publisherName": "projsh_"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": "x64"
        },
        {
          "target": "deb",
          "arch": "x64"
        }
      ],
      "category": "AudioVideo",
      "executableName": "firetail",
      "desktop": {
        "Type": "Application",
        "Name": "Firetail",
        "Comment": "Audio Player",
        "Icon": "firetail",
        "Terminal": "false"
      }
    }
  }
}
